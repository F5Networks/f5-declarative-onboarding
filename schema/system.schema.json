{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/F5Networks/f5-decon/master/schema/system.schema.json",
    "title": "F5 Declarative Onboarding system declaration",
    "description": "System properties for onboarding a BIG-IP.",
    "type": "object",
    "patternProperties": {
        "^(?!(hostname|class)).*$": {
            "description": "System level objects",
            "type": "object",
            "required": ["class"],
            "properties": {
                "class": {
                    "description": "Indicates this JSON document contains system level configuration.",
                    "type": "string",
                    "const": "System"
                },
                "hostname": {
                    "description": "Hostname to set for device.",
                    "type": "string",
                    "format": "hostname"
                }
            },
            "patternProperties": {
                "^(?!(hostname|class)).*$": {
                    "description": "System level proerties aside from hostname.",
                    "type": "object",
                    "oneOf": [
                        { "$ref": "#/definitions/License" },
                        { "$ref": "#/definitions/DNS" },
                        { "$ref": "#/definitions/NTP" },
                        { "$ref": "#/definitions/User" }
                    ]
                }
            }
        }
    },
    "definitions": {
        "License": {
            "description": "Licensing information",
            "type": "object",
            "required": ["class"],
            "properties": {
                "class": {
                    "description": "Indicates this JSON document contains licensing information.",
                    "type": "string",
                    "const": "License"
                }
            },
            "additionalProperties": {
                "oneOf": [
                    {
                        "description": "A registration key",
                        "required": ["regKey"],
                        "properties": {
                            "regKey": {
                                "description": "Registration key.",
                                "type": "string",
                                "pattern": "^[A-Z]{5}-[A-Z]{5}-[A-Z]{5}-[A-Z]{5}-[A-Z]{7}$"
                            },
                            "addOnKeys": {
                                "description": "Add on keys.",
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[A-Z]{7}-[A-Z]{7}$",
                                    "uniqueItems": true
                                }
                            },
                            "overwrite": {
                                "description": "Whether or not to overwrite the license if the device is already licensed.",
                                "type": "boolean",
                                "default": false
                            }
                        }
                    },
                    {
                        "description": "BIG-IQ license pool",
                        "type": "object",
                        "required": ["licensePool"],
                        "properties": {
                            "licensePool": {
                                "type": "object"
                            }
                        }
                    }
                ]
            }
        },
        "DNS": {
            "description": "DNS configuration",
            "type": "object",
            "required": ["class"],
            "properties": {
                "class": {
                    "description": "Indicates this JSON document contains DNS configuration.",
                    "type": "string",
                    "const": "DNS"
                },
                "nameServers": {
                    "description": "IP addresses of name servers to use for DNS.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "anyOf": [
                            { "format": "ipv4" },
                            { "format": "ipv6" }
                        ]
                    }
                },
                "search": {
                    "description": "Search domain to use for DNS.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "hostname"
                    }
                }
            }
        },
        "NTP": {
            "description": "NTP configuration",
            "type": "object",
            "required": ["class"],
            "properties": {
                "class": {
                    "description": "Indicates this JSON document contains NTP configuration.",
                    "type": "string",
                    "const": "NTP"
                },
                "servers": {
                    "description": "IP addresses of servers to use for NTP.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "anyOf": [
                            { "format": "ipv4" },
                            { "format": "ipv6" },
                            { "format": "hostname" }
                        ]
                    }
                },
                "timezone": {
                    "description": "The timezone to set.",
                    "type": "string"
                }
            }
        },
        "User": {
            "description": "User configuration",
            "type": "object",
            "required": ["class"],
            "properties": {
                "class": {
                    "description": "Indicates this JSON document contains user configuration.",
                    "type": "string",
                    "const": "User"
                }
            },
            "additionalProperties": {
                "oneOf": [
                    {
                        "description": "Configuration for root user",
                        "type": "object",
                        "required": ["newPassword", "oldPassword"],
                        "properties": {
                            "newPassword": {
                                "description": "Password to set for the root user.",
                                "type": "string"
                            },
                            "oldPassword": {
                                "description": "Old password for the root user.",
                                "type": "string"
                            }
                        }
                    },
                    {
                        "description": "Configuration for non-root users.",
                        "type": "object",
                        "required": ["password", "role"],
                        "properties": {
                            "password": {
                                "description": "Password for the user.",
                                "type": "string"
                            },
                            "partitionAccess": {
                                "description": "Access control configuration",
                                "type": "object",
                                "patternProperties": {
                                    ".+": {
                                        "type": "object",
                                        "required": ["role"],
                                        "properties": {
                                            "role": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            },
                            "role": {
                                "description": "Role for the user.",
                                "type": "string",
                                "enum": [
                                    "admin",
                                    "auditor",
                                    "guest",
                                    "manager",
                                    "operator",
                                    "user-manager",
                                    "application-editor",
                                    "certificate-manager",
                                    "irule-manager",
                                    "no-access",
                                    "resource-admin"
                                ]
                            },
                            "shell": {
                                "description": "Shell for the user.",
                                "type": "string",
                                "enum": ["bash", "tmsh"],
                                "default": "tmsh"
                            }
                        }
                    }
                ]
            }
        }
    }
}