{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/F5Networks/f5-decon/master/schema/network.schema.json",
    "title": "F5 Declarative Onboarding network declaration",
    "description": "Network properties for onboarding a BIG-IP.",
    "type": "object",
    "properties": {
        "vlans": {
            "description": "Properties for VLANs.",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z]+.*": {
                    "description": "Properties for one VLAN.",
                    "type": "object",
                    "required": ["interfaces"],
                    "properties": {
                        "interfaces": {
                            "description": "Interfaces for the VLAN.",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": ["name"],
                                "properties": {
                                    "name": {
                                        "description": "Name of the interface.",
                                        "type": "string"
                                    },
                                    "tagged": {
                                        "description": "Whether or not the interface is tagged. Default is true if a tag is provided, otherwise false.",
                                        "type": "boolean"
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "mtu": {
                            "description": "MTU for the VLAN.",
                            "type": "integer",
                            "minimum": 576,
                            "maximum": 9198
                        },
                        "tag": {
                            "description": "Tag for the VLAN.",
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 4094
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "selfIps": {
            "description": "Properties for self IPs.",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z]+.*": {
                    "description": "Properties for one self IP.",
                    "type": "object",
                    "required": ["address", "vlan"],
                    "properties": {
                        "address": {
                            "description": "IP address.",
                            "type": "string",
                            "anyOf": [
                                { "format": "ipv4" },
                                { "format": "ipv6" }
                            ]
                        },
                        "vlan": {
                            "description": "Vlan for the self IP.",
                            "type": "string"
                        },
                        "allowService": {
                            "description": "Which services (ports) to allow on the self IP. Value should be 'all', 'none', 'default', or '<service:port>",
                            "type": "string",
                            "pattern": "^(all|none|default)|(:)$",
                            "default": "default"
                        },
                        "trafficGroup": {
                            "description": "Traffic group for the self IP. Will be created if it does not exist.",
                            "type": "string"
                        },
                        "floating": {
                            "description": "Whether or not the self IP should be a floating IP.",
                            "type": "boolean",
                            "default": false
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}